@using Global.Web.Controllers
@if (Request.IsAuthenticated)
{
    <text>
    Welcome <strong>@User.Identity.Name</strong>! [ @Html.ActionLink("Sign Out", AccountController.SignOutAction, new { controller = AccountController.ControllerName, area = "Admin" })]
    </text>
}
else
{
    @:[ @Html.ActionLink("Sign In", AccountController.SignInAction, new { controller = AccountController.ControllerName, returnUrl = HttpContext.Current.Request.RawUrl })]
                }
